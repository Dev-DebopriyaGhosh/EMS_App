<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.management.employeeManagement.model">
	<class name="User" table="USER_ROLES">
		<id name="userId" column="USER_ID" type="int">
			<generator class="native"/>
		</id>
		<property name="userName" column="USER_NAME" type="string"/>
		<property name="password" column="USER_PASSWORD" type="string"/>
		<property name="role" column="USER_ROLE" type="string"/>	
	</class>
</hibernate-mapping>